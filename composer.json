{
    "name":"terminal42/contao-changelanguage",
    "description":"ChangeLanguage extension for Contao Open Source CMS",
    "keywords":["contao", "change", "language"],
    "type":"contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"terminal42 gmbh",
            "homepage":"http://terminal42.ch"
        }
    ],
    "require":{
        "php":">=5.3.2",
        "contao/core":">=3.2,<3.6",
        "contao-community-alliance/composer-plugin":"2.*",
        "contao-community-alliance/language-relations": "1.x-dev"
    },
    "autoload": {
        "psr-0": {
            "Terminal42": "src/"
        }
    },
    "replace": {
        "contao-legacy/changelanguage": "self.version"
    },
    "extra":{
        "contao": {
            "sources":{
                "contao-module": "system/modules/changelanguage"
            },
            "runonce": [
                "runonce/updateFallbacks.php"
            ],
            "transifex": {
                "project": "contao-changelanguage",
                "prefix": "master-",
                "languages_cto": "languages",
                "languages_tx": ".tx"
            }
        }
    }
}
